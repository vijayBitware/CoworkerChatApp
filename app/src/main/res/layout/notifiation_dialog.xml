<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="30dp"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/notifications"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/turn_on_lay"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:src="@drawable/quantum_ic_volume_up_grey600_36"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turn_on"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/mute_lay_1"

        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:tint="@color/grey"
            android:src="@drawable/ic_clock"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mute_for"

            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/mute_lay_2"

        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:tint="@color/grey"

            android:layout_margin="10dp"
            android:src="@drawable/ic_clock"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mute_for_2"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/customize_lay"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:tint="@color/grey"

            android:layout_margin="10dp"
            android:src="@drawable/ic_settings"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customize"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"

            android:textColor="@color/dark_gray"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/turn_off_lay"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:tint="@color/grey"
            android:src="@drawable/ic_volume_off_gray"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turn_off"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>